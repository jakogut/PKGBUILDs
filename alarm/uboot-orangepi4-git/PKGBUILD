# U-Boot: Orange Pi 4
# Maintainer: Kevin Mihelich <kevin@archlinuxarm.org>
# Maintainer: Joseph Kogut <joseph.kogut@gmail.com>

buildarch=8

pkgname=uboot-orangepi4-git
pkgver=2020.04rc2.r48.gf2a73d6867
pkgrel=1
_srcname=u-boot
pkgdesc="U-Boot for Orange Pi 4"
arch=('aarch64')
url='http://www.denx.de/wiki/U-Boot/WebHome'
license=('GPL')
backup=('boot/boot.txt' 'boot/boot.scr')
makedepends=('bc' 'git')
install=${pkgname}.install
_commit_rkbin=5aa9a92b5652d37b323c870329103e120dfc8d87
source=("git+https://gitlab.denx.de/u-boot/u-boot"
        "git+https://github.com/ARM-software/arm-trusted-firmware.git"
	"add-board-orangepi-4.patch"
        'boot.txt'
        'mkscr')
md5sums=('SKIP'
	 'SKIP'
	 'SKIP'
         'e2869196adb467048d6e8c86fbf15fee'
         '021623a04afd29ac3f368977140cfbfd')

pkgver() {
  cd $_srcname
  git describe --long | sed -E 's/^v//;s/([^-]*-g)/r\1/;s/-/./g;s/\.rc/rc/'
}

prepare() {
  cd ${srcdir}/${_srcname}
  patch -p1 -i ../add-board-orangepi-4.patch
}

build() {
  unset CLFAGS CXXFLAGS CPPFLAGS LDFLAGS

  cd ${srcdir}/arm-trusted-firmware
  make realclean
  make PLAT=rk3399

  cd ${srcdir}/${_srcname}

  make orangepi-4-rk3399_defconfig
  echo 'CONFIG_IDENT_STRING=" Arch Linux ARM"' >> .config
  make EXTRAVERSION=-${pkgrel} BL31=${srcdir}/arm-trusted-firmware/build/rk3399/release/bl31/bl31.elf
}

package() {
  cd ${_srcname}

  mkdir -p "${pkgdir}/boot"

  cp idbloader.img u-boot.itb "${pkgdir}/boot"

  tools/mkimage -A arm -O linux -T script -C none -n "U-Boot boot script" -d ../boot.txt "${pkgdir}/boot/boot.scr"
  cp ../{boot.txt,mkscr} "${pkgdir}"/boot
}
